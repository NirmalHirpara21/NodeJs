<form method="post">
  <table align="center" border="" >
    <tr>
      <td><span class="input-group-addon">Name:</span></td>
      <td><input type="text" name="name" placeholder="Enter Name" class="form-control" value="" required>
    </tr>
    <tr>
      <!-- <td>Email:</td> -->
      <td><span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span></td>
      <td><input type="email" name="email" placeholder="Enter Email" class="form-control" value="" required>
    </tr>
    <tr>
      <!-- <td>Password:</td> -->
      <td><span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span></td>
      <td><input type="password" name="password" placeholder="Enter Password" class="form-control" value="" required>
    </tr>
    <tr>
      <!-- <td>Contact:</td> -->
      <td><span class="input-group-addon">Contact:</span></td>
      <td><input type="text" name="contact" placeholder="Enter Contact" class="form-control" value="" required>
    </tr>
    <tr>
      <!-- <td>Address:</td> -->
      <td><span class="input-group-addon">Address:</span></td>
      <td><input type="text" name="address" placeholder="Enter Address" class="form-control" value="" required>
    </tr>
    <tr>
      <!-- <td>Hobby:</td> -->
      <td><span class="input-group-addon">Hobby:</span></td>
      <td><input type="text" name="hobby" placeholder="Enter Hobby" class="form-control" value="" required>
    </tr>
    <tr>
      <td><span class="input-group-addon">City:</span></td>
      <td>        
        <select id="city" name="city" class="form-control" required>
          <option class="form-control" disabled selected>-- Select city --</option>
          <option value="surat" class="form-control">Surat</option>
          <option value="rajkot" class="form-control">Junagadh</option>
          <option value="taravada" class="form-control">Ahemdabad</option>
          <option value="taravada" class="form-control">Godhra</option>
        </select>
      </td>
    </tr>    
      <tr>
        <td><span class="input-group-addon">Gender:</span></td>
        <td>        
          <input type="radio" id="male" name="gender" value="male">Male
          <input type="radio" id="female" name="gender" value="female">Female
        </td>

        <!-- <td><span class="input-group-addon">Gender:</span></td>
        <td><input type="radio" name="text" class="form-control" value="">Male
        <td><input type="radio" name="text" class="form-control" value="">Female -->
      </tr>
    <tr>
      <td align="center"></td>
      <td rowspan="2" >  
        <input type="submit" name="save" value="Register" class="btn btn-primary" rowspan="2">
      </td>
    </tr>
  </table>
</form>

